# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-qrcode
_pkgname=qrcode
pkgver=6.0
pkgrel=0
pkgdesc="A QR code image generator"
url="https://github.com/lincolnloop/python-qrcode"
arch="noarch"
license="BSD"
depends="py-pillow py-six"
makedepends="python2-dev python3-dev py-setuptools"
options="!check"
subpackages="py2-$_pkgname:_py2 py3-$_pkgname:_py3"
source="$pkgname-$pkgver.tar.gz::https://github.com/lincolnloop/python-qrcode/archive/v$pkgver.tar.gz"
builddir="$srcdir"/python-qrcode-$pkgver

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
	rm -rf "$subpkgdir"/usr/share/man
}
sha512sums="866a316ec1c476d24a982a61d16b07ac1898069c9f788e4fd6701cd204c58eb555ca808cffb0591562eef5fbae7d2fa24ab3248ced76d8acf9e274328618a096  py-qrcode-6.0.tar.gz"
