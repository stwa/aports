# Contributor: Stefan Wagner <stw@bit-strickerei.de>
# Maintainer: Stefan Wagner <stw@bit-strickerei.de>
pkgname=mkinitcpio-lvm2
pkgver=0.0.1
pkgrel=0
pkgdesc="mkinitcpio hook to install and enable lvm2 in early userspace"
url="https://bit-strickerei.de"
arch="noarch"
license="GPL"
depends="mkinitcpio lvm2 device-mapper thin-provisioning-tools"
source="lvm2_hook lvm2_install"
options="!check"
builddir="$srcdir"

build() {
	cd "$builddir"
}

package() {
	cd "$builddir"

	install -Dm644 lvm2_hook "$pkgdir"/usr/lib/initcpio/hooks/lvm2
	install -Dm644 lvm2_install "$pkgdir"/usr/lib/initcpio/install/lvm2
}

