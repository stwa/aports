# Contributor: Stefan Wagner <stw@bit-strickerei.de>
# Maintainer: Stefan Wagner <stw@bit-strickerei.de>
pkgname=py-celery
_pkgname=celery
pkgver=4.2.1
pkgrel=1
pkgdesc="Distributed Asyncronous Task Queue"
url="http://celeryproject.org"
arch="noarch"
license="BSD"
options="!check"
depends="py-billiard py-tz py-kombu py-vine"
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py2-$_pkgname:_py2 py3-$_pkgname:_py3"
source="https://pypi.io/packages/source/c/celery/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

package() {
	cd "$builddir"
	mkdir -p "$pkgdir"
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc ${python#python}"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

sha512sums="474733200e0f6aadbfab5deeb43ee563618687792d43219ebc81a53084ad491cafa410d6bb56153c3d14c76d358ce119f0055ee9b6c31e6becfe8ddf2d2178ad  celery-4.2.1.tar.gz"
